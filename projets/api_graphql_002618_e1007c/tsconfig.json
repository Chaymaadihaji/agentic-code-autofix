{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "baseUrl": "./",
  "paths": {
    "@*": ["./src/*"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
