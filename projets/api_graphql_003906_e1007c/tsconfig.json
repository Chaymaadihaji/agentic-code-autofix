json
{
  "compilerOptions": {
    "outDir": "bin",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "lib": ["es2015"],
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/"],
  "exclude": ["node_modules/**"],
  "ts-node": {
    "transpileOnly": true
  },
  "references": {
    "type": "tsconfig-source",
    "path": "./tsconfig.source.json"
  }
}
